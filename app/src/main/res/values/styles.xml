<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="BodySmall">
        <item name="android:fontFamily">@font/itcavantgardestd_bk</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="DetailsPlotHeading">
        <item name="android:fontFamily">@font/itcavantgardestd_demi</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="FancyLarge">
        <item name="android:textSize">32sp</item>
        <item name="android:lineSpacingExtra">-4sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:fontFamily">@font/kautivacyrillicblack</item>
    </style>

    <style name="Micro">
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.05</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/itcavantgardestd_demi</item>
    </style>

    <style name="MainActivityReleaseDate" parent="BodySmall">
        <item name="android:textSize">12sp</item>
        <item name="android:alpha">0.5</item>
    </style>

</resources>
